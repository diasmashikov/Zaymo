<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mlMainLayout"
    android:layout_marginRight="@dimen/mrMainLayout"
    android:layout_marginBottom="@dimen/mbMainLayout"
    android:padding="@dimen/padComponent"
    android:background="@drawable/shadow_background_with_border"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TextView
        android:id="@+id/tvDebtUserAskingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kzsss"
        android:layout_marginLeft="5dp"
        android:text="Кому"
        android:textSize="@dimen/tsInfoDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDebtUserAsking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kzsss"
        android:text="Рустам М"
        android:textColor="@color/mainAppColor"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tvDebtUserAskingText"
        app:layout_constraintTop_toBottomOf="@+id/tvDebtUserAskingText" />

    <TextView
        android:id="@+id/tvCreditPeriodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/kzsss"
        android:text="Срок"
        android:textSize="@dimen/tsInfoDescription"
        app:layout_constraintStart_toStartOf="@+id/tvDebtUserAsking"
        app:layout_constraintTop_toBottomOf="@+id/tvDebtUserAsking" />

    <TextView
        android:id="@+id/tvCreditPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kzsss"
        android:text="6 месяцев"
        android:textColor="@color/mainAppColor"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tvCreditPeriodText"
        app:layout_constraintTop_toBottomOf="@+id/tvCreditPeriodText" />


    <TextView
        android:id="@+id/tvCreditAskSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kzsss"
        android:layout_marginTop="5dp"
        android:text="10000 T"
        android:layout_marginRight="10dp"
        android:textColor="@color/mainAppColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.widget.Button
        android:id="@+id/btnLend"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btnrounded"
        android:fontFamily="@font/kzsss"
        android:text="Выдать"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCreditAskSum" />



</androidx.constraintlayout.widget.ConstraintLayout>





