<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zaymo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainAppColor</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>



    //Splash Screen
    <style name="splashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@mipmap/ic_logo</item>
    </style>

    //Purple Color Theme
    <style name="AppTheme.Secondary" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/secondaryAppColor</item>
        <item name="colorAccent">@color/secondaryAppColor</item>
        <item name="colorPrimary">@color/secondaryAppColor</item>
        <item name="colorPrimaryDark">@color/secondaryAppColor</item>

    </style>

    //BottomView Black Theme
    <style name="AppTheme.Icons" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>

    </style>

    //Text size on a thumb switch
    <style name="switchThumb">
        <item name="android:textSize">10sp</item>
    </style>

    //Buttons
    <style name="Button" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mainAppColor</item>
        <item name="colorPrimaryVariant">@color/mainAppColor</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    //CheckBox
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/mainAppColor</item>
        <item name="android:textColorSecondary">@color/mainAppColor</item>
    </style>

    //ProgressBarCreditBody
    <style name="Theme.Zaymo.ProgressBarCreditBody">
        <item name="colorAccent">@color/mainAppColor</item> <!-- Whatever color you want-->
    </style>

    //ProgressBarCreditInterest
    <style name="Theme.Zaymo.ProgressBarCreditInterest">
        <item name="colorAccent">@android:color/holo_orange_light</item> <!-- Whatever color you want-->
    </style>
</resources>